@model Projeto.Models.Produtos

@{
    ViewData["Title"] = "Editar";

    IEnumerable<Produtos> produto = ViewData["p"] as IEnumerable<Produtos>;
}
<link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/cadastrar-produtos.css">
    <link rel="stylesheet" href="~/css/footer.css">
    <script src="https://kit.fontawesome.com/15068104d6.js" crossorigin="anonymous"></script>


    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

 
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Produtos</title>

      <!-- início do preloader -->
  <div id="preloader">
    <div class="inner">
       <!-- HTML DA ANIMAÇÃO MUITO LOUCA DO SEU PRELOADER! -->
       <img src="../images/Yogurt.gif" alt="">
    </div>
</div>

<p>@TempData["msg"]</p>

 <div class="tela-cadastro">
        <form asp-action="Editar" enctype="multipart/form-data">
        @foreach(var item in produto)
        {
             <h1>Cadastrar Produtos</h1>
          <p>ID</p>
          <input type="text" name="id" value="@TempData["id"]" required>
          <br>
          <p>Nome do produto</p>
          <input type="text" name="nomeProduto" value="@item.NomeProduto" required>
          <br>
          
          <p>Preço</p>
          <input name="preco" value="@item.Preco" required>
          <br>
          
          <p>Quantidade</p>
          <input type="number" name="qtd" value="@item.Qtd" required>
          <br>
          
          <p>Descrição Produto</p>
          <input type="text" name="desc" id="descricao" value="@item.Desc" required>
          <br />

          <div> <input type="file" name="img" />
            <input type="file" name="img" />
            <input type="file" name="img" /> </div>

        <div id="erro"></div>
        
        <div class="button-cadastrar"><button type="submit" id="enviar">Salvar</button></div>
        }
    </form>
      <div class="button-listar"><a asp-controller="Produtos" asp-action="ListarAdm">
                <button id="enviar">Lista de Produtos</button></a></div>
        <br>
 </div>

 <script src="~/js/preloader.js"></script>
<script>
//<![CDATA[
$(window).on('load', function () {
    $('#preloader .inner').fadeOut();
    $('#preloader').delay(10).fadeOut('slow'); 
    $('body').delay(10).css({'overflow': 'visible'});
  })
  //]]>
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
